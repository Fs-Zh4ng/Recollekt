{
  "expo": {
    "name": "Recollekt",
    "slug": "Recollekt",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "recollekt",
    "userInterfaceStyle": "automatic",
    "main": "node_modules/expo-router/entry",
    "newArchEnabled": true,
    "ios": {
      "supportsTablet": true,
      "infoPlist": {
        "NSPhotoLibraryAddUsageDescription": "We need access to your photo library to save videos.",
        "ITSAppUsesNonExemptEncryption": false,
        "NSCameraUsageDescription": "We need access to your camera to take photos and videos.",
        "NSPhotoLibraryUsageDescription": "We need access to your photo library to save and upload photos.",
        "NSAppTransportSecurity": {
          "NSAllowsArbitraryLoads": true
        }
      },
      "bundleIdentifier": "com.fsz.recollekt"
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "edgeToEdgeEnabled": true,
      "package": "com.recollekt.app"
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/splash-icon.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#ffffff"
        }
      ],
      "expo-video",
      "react-native-imglysdk"
    ],
    "experiments": {
      "typedRoutes": true
    },
    "extra": {
      "router": {},
      "eas": {
        "projectId": "6922d494-3328-4108-9762-0d3e19af819b"
      }
    }
  },
  "ios": {
    "infoPlist": {
      "NSPhotoLibraryAddUsageDescription": "Allow this app to save photos to your library."
    }
  }
}
